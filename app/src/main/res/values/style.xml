<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_main_layout_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="iconTint">@color/text_color</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_to_text_distance</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="toolbar_settings_layout_style">
        <item name="android:layout_height">@dimen/settings_element_height</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settings_layout_style">
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">21dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>